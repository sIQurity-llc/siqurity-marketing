---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const contactMethods = [
  {
    icon: 'ðŸ“§',
    title: 'Email',
    description: 'Send us an email anytime',
    value: 'tony@siqurity.com',
    href: 'mailto:tony@siqurity.com',
  },
  {
    icon: 'ðŸ’¼',
    title: 'LinkedIn',
    description: 'Connect with Tony',
    value: 'Tony Rossi',
    href: 'https://linkedin.com/in/anthonyrossi1983',
  },
];
---

<Layout title="Contact - sIQurity">
  <Header slot="header" />

  <!-- Hero -->
  <section class="relative overflow-hidden bg-gradient-to-br from-slate-50 via-white to-purple-50 dark:from-slate-900 dark:via-slate-900 dark:to-slate-800 py-20 lg:py-28">
    <div class="container-custom text-center">
      <h1 class="text-4xl lg:text-5xl font-bold text-gray-900 dark:text-white mb-6">
        Let's Start a
        <span class="text-brand-gradient">Conversation</span>
      </h1>
      <p class="text-xl text-gray-600 dark:text-slate-300 max-w-2xl mx-auto">
        Ready to discuss your compliance needs? Schedule a free 30-minute consultation or reach out directly.
      </p>
    </div>
  </section>

  <!-- Calendly Section -->
  <section class="section">
    <div class="container-custom">
      <div class="grid lg:grid-cols-3 gap-12">
        <!-- Contact Info -->
        <div class="space-y-6">
          <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">
            Get in Touch
          </h2>

          {contactMethods.map((method) => (
            <a href={method.href} class="card p-6 block hover:border-brand-magenta dark:hover:border-brand-pink transition-colors" target="_blank" rel="noopener noreferrer">
              <div class="flex items-start gap-4">
                <div class="text-3xl">{method.icon}</div>
                <div>
                  <h3 class="font-semibold text-gray-900 dark:text-white mb-1">
                    {method.title}
                  </h3>
                  <p class="text-sm text-gray-500 dark:text-slate-400 mb-2">
                    {method.description}
                  </p>
                  <p class="text-brand-magenta dark:text-brand-pink font-medium">
                    {method.value}
                  </p>
                </div>
              </div>
            </a>
          ))}

          <div class="card p-6 bg-gradient-to-br from-purple-50 to-blue-50 dark:from-slate-800 dark:to-slate-700">
            <h3 class="font-semibold text-gray-900 dark:text-white mb-3">
              What to Expect
            </h3>
            <ul class="space-y-2 text-gray-600 dark:text-slate-300 text-sm">
              <li class="flex items-start gap-2">
                <span class="text-green-500">âœ“</span>
                30-minute no-obligation conversation
              </li>
              <li class="flex items-start gap-2">
                <span class="text-green-500">âœ“</span>
                Honest assessment of your situation
              </li>
              <li class="flex items-start gap-2">
                <span class="text-green-500">âœ“</span>
                Clear recommendations (even if it's not us)
              </li>
              <li class="flex items-start gap-2">
                <span class="text-green-500">âœ“</span>
                No pressure, no hard sell
              </li>
            </ul>
          </div>
        </div>

        <!-- Calendly Embed -->
        <div class="lg:col-span-2">
          <div class="card p-8">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">
              Schedule a Free Consultation
            </h2>

            <!-- Calendly inline widget -->
            <div class="calendly-inline-widget" data-url="https://calendly.com/tony-siqurity/30min" style="min-width:320px;height:700px;"></div>
            <script is:inline type="text/javascript" src="https://assets.calendly.com/assets/external/widget.js" async></script>

            <!-- Fallback if Calendly doesn't load -->
            <noscript>
              <div class="text-center py-12">
                <p class="text-gray-600 dark:text-slate-400 mb-4">
                  Please enable JavaScript to use our scheduling widget, or contact us directly:
                </p>
                <a href="mailto:tony@siqurity.com" class="btn-primary">
                  Email tony@siqurity.com
                </a>
              </div>
            </noscript>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Form (alternative) -->
  <section class="section bg-gray-50 dark:bg-slate-800/50">
    <div class="container-custom">
      <div class="max-w-2xl mx-auto">
        <div class="text-center mb-8">
          <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">
            Prefer to Send a Message?
          </h2>
          <p class="text-gray-600 dark:text-slate-400">
            Fill out the form below and we'll get back to you within one business day.
          </p>
        </div>
        <div class="card p-8">
          <form class="space-y-6" action="https://formspree.io/f/your-form-id" method="POST">
            <div class="grid md:grid-cols-2 gap-6">
              <div>
                <label for="firstName" class="block text-sm font-medium text-gray-700 dark:text-slate-300 mb-2">
                  First Name *
                </label>
                <input
                  type="text"
                  id="firstName"
                  name="firstName"
                  required
                  class="w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-slate-600 bg-white dark:bg-slate-800 text-gray-900 dark:text-white focus:ring-2 focus:ring-brand-magenta dark:focus:ring-brand-pink focus:border-transparent transition-colors"
                />
              </div>
              <div>
                <label for="lastName" class="block text-sm font-medium text-gray-700 dark:text-slate-300 mb-2">
                  Last Name *
                </label>
                <input
                  type="text"
                  id="lastName"
                  name="lastName"
                  required
                  class="w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-slate-600 bg-white dark:bg-slate-800 text-gray-900 dark:text-white focus:ring-2 focus:ring-brand-magenta dark:focus:ring-brand-pink focus:border-transparent transition-colors"
                />
              </div>
            </div>

            <div class="grid md:grid-cols-2 gap-6">
              <div>
                <label for="email" class="block text-sm font-medium text-gray-700 dark:text-slate-300 mb-2">
                  Email *
                </label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-slate-600 bg-white dark:bg-slate-800 text-gray-900 dark:text-white focus:ring-2 focus:ring-brand-magenta dark:focus:ring-brand-pink focus:border-transparent transition-colors"
                />
              </div>
              <div>
                <label for="company" class="block text-sm font-medium text-gray-700 dark:text-slate-300 mb-2">
                  Company
                </label>
                <input
                  type="text"
                  id="company"
                  name="company"
                  class="w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-slate-600 bg-white dark:bg-slate-800 text-gray-900 dark:text-white focus:ring-2 focus:ring-brand-magenta dark:focus:ring-brand-pink focus:border-transparent transition-colors"
                />
              </div>
            </div>

            <div>
              <label for="subject" class="block text-sm font-medium text-gray-700 dark:text-slate-300 mb-2">
                What can we help you with? *
              </label>
              <select
                id="subject"
                name="subject"
                required
                class="w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-slate-600 bg-white dark:bg-slate-800 text-gray-900 dark:text-white focus:ring-2 focus:ring-brand-magenta dark:focus:ring-brand-pink focus:border-transparent transition-colors"
              >
                <option value="">Select a topic...</option>
                <option value="cmmc-assessment">CMMC/NIST 800-171 Assessment</option>
                <option value="stig-review">STIG Compliance Review</option>
                <option value="vuln-management">Vulnerability Management</option>
                <option value="documentation">Compliance Documentation</option>
                <option value="fractional-ciso">Fractional CISO Services</option>
                <option value="grc-program">GRC Program Buildout</option>
                <option value="general">General Inquiry</option>
              </select>
            </div>

            <div>
              <label for="message" class="block text-sm font-medium text-gray-700 dark:text-slate-300 mb-2">
                Message *
              </label>
              <textarea
                id="message"
                name="message"
                rows="5"
                required
                class="w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-slate-600 bg-white dark:bg-slate-800 text-gray-900 dark:text-white focus:ring-2 focus:ring-brand-magenta dark:focus:ring-brand-pink focus:border-transparent transition-colors resize-none"
                placeholder="Tell us about your compliance needs..."
              ></textarea>
            </div>

            <div>
              <label for="referral" class="block text-sm font-medium text-gray-700 dark:text-slate-300 mb-2">
                How did you hear about us?
              </label>
              <input
                type="text"
                id="referral"
                name="referral"
                class="w-full px-4 py-3 rounded-lg border border-gray-300 dark:border-slate-600 bg-white dark:bg-slate-800 text-gray-900 dark:text-white focus:ring-2 focus:ring-brand-magenta dark:focus:ring-brand-pink focus:border-transparent transition-colors"
              />
            </div>

            <div>
              <button type="submit" class="btn-primary w-full md:w-auto">
                Send Message
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
</Layout>
