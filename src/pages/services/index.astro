---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const services = [
  {
    slug: 'cmmc-assessment',
    icon: 'üõ°Ô∏è',
    title: 'CMMC/NIST 800-171 Readiness Assessment',
    description: 'Gap analysis against all 110 NIST 800-171 controls, SPRS score calculation, and remediation roadmap.',
    timeline: '4-6 weeks',
    priceRange: '$8,000 - $15,000+',
    features: [
      'Scoping document',
      'Control assessment workbook',
      'SPRS score calculation',
      'Gap analysis report',
      'Prioritized remediation roadmap',
      'Draft SSP & POA&M',
      'Executive summary',
    ],
  },
  {
    slug: 'stig-compliance',
    icon: 'üîí',
    title: 'STIG Compliance Review',
    description: 'Automated STIG scanning plus manual analysis against applicable baselines.',
    timeline: '2 weeks',
    priceRange: '$3,000 - $5,000',
    features: [
      'STIG scan results',
      'Findings report with severity rankings',
      'Remediation recommendations',
      'Timeline for remediation',
    ],
  },
  {
    slug: 'vulnerability-management',
    icon: 'üîç',
    title: 'Vulnerability Management Program',
    description: 'Monthly vulnerability scanning, reporting, and remediation guidance.',
    timeline: 'Ongoing (12-month minimum)',
    priceRange: '$2,000 - $4,000/month',
    features: [
      'Monthly vulnerability scans',
      'Executive summary report',
      'Remediation guidance',
      'Quarterly compliance check-ins',
    ],
  },
  {
    slug: 'compliance-documentation',
    icon: 'üìÑ',
    title: 'Compliance Documentation Development',
    description: 'Create or update SSP, POA&M, policies, and procedures.',
    timeline: '4-8 weeks',
    priceRange: '$5,000 - $15,000',
    features: [
      'System Security Plan (SSP)',
      'Plan of Action & Milestones (POA&M)',
      'Security policies and procedures',
      'Employee training materials',
    ],
  },
  {
    slug: 'fractional-ciso',
    icon: 'üëî',
    title: 'Fractional CISO Services',
    description: 'Part-time security leadership for companies without dedicated security staff.',
    timeline: 'Ongoing (6-month minimum)',
    priceRange: '$5,000 - $8,000/month',
    features: [
      '10-20 hours/month strategic guidance',
      'Security program development',
      'Vendor management',
      'Board/executive reporting',
      'Incident response planning',
    ],
  },
  {
    slug: 'grc-program',
    icon: 'üìä',
    title: 'GRC Program Buildout',
    description: 'Comprehensive governance, risk, and compliance program development.',
    timeline: '3-6 months',
    priceRange: '$15,000 - $50,000+',
    features: [
      'Risk assessment',
      'Policy development',
      'Control implementation',
      'Audit preparation',
      'HIPAA, ISO 27001, SOC 2, FedRAMP support',
    ],
  },
