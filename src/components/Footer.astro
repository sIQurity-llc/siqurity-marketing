---
const currentYear = new Date().getFullYear();

const footerLinks = {
  services: [
    { name: 'CMMC Assessment', href: '/services/cmmc-assessment' },
    { name: 'STIG Compliance', href: '/services/stig-compliance' },
    { name: 'Vulnerability Management', href: '/services/vulnerability-management' },
    { name: 'Compliance Documentation', href: '/services/compliance-documentation' },
    { name: 'Fractional CISO', href: '/services/fractional-ciso' },
    { name: 'GRC Program', href: '/services/grc-program' },
  ],
  company: [
    { name: 'About', href: '/about' },
    { name: 'Contact', href: '/contact' },
    { name: 'sIQurity Foundation', href: 'https://siqurity.org', external: true },
  ],
  resources: [
    { name: 'Blog', href: '/blog' },
    { name: 'CMMC Guide', href: '/resources#cmmc-guide' },
    { name: 'NIST 800-171', href: '/resources#nist-800-171' },
    { name: 'Free Resources', href: '/resources' },
  ],
  legal: [
    { name: 'Privacy Policy', href: '/privacy' },
    { name: 'Terms of Service', href: '/terms' },
  ],
};
---

<footer class="bg-gray-50 dark:bg-slate-800 border-t border-gray-200 dark:border-slate-700">
  <div class="container-custom py-12 lg:py-16">
    <div class="grid grid-cols-2 md:grid-cols-5 gap-8 lg:gap-12">
      <!-- Brand -->
      <div class="col-span-2 md:col-span-1">
        <a href="/" class="flex items-center gap-2 mb-4">
          <img src="/siqurity-logo-only-color.png" alt="sIQurity" class="h-8 w-8" />
          <span class="text-xl font-bold text-brand-gradient font-orbitron">sIQurity</span>
        </a>
        <p class="text-gray-600 dark:text-slate-400 text-sm mb-4">
          Cybersecurity compliance for defense contractors and small businesses.
        </p>
        <!-- SDVOSB Badge -->
        <div class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full bg-purple-100 dark:bg-purple-900/30 text-purple-700 dark:text-purple-300 text-xs font-medium mb-4">
          <span>üéñÔ∏è</span>
          <span>Service-Disabled Veteran-Owned</span>
        </div>
        <div class="flex gap-4">
          <a href="https://linkedin.com/company/siqurity" class="text-gray-400 hover:text-brand-magenta dark:hover:text-brand-pink transition-colors" aria-label="LinkedIn" target="_blank" rel="noopener noreferrer">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Services -->
      <div>
        <h3 class="font-semibold text-gray-900 dark:text-white mb-4">Services</h3>
        <ul class="space-y-3">
          {footerLinks.services.map((link) => (
            <li>
              <a href={link.href} class="text-gray-600 dark:text-slate-400 hover:text-brand-magenta dark:hover:text-brand-pink text-sm transition-colors">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Company -->
      <div>
        <h3 class="font-semibold text-gray-900 dark:text-white mb-4">Company</h3>
        <ul class="space-y-3">
          {footerLinks.company.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-gray-600 dark:text-slate-400 hover:text-brand-magenta dark:hover:text-brand-pink text-sm transition-colors"
                target={link.external ? '_blank' : undefined}
                rel={link.external ? 'noopener noreferrer' : undefined}
              >
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Resources -->
      <div>
        <h3 class="font-semibold text-gray-900 dark:text-white mb-4">Resources</h3>
        <ul class="space-y-3">
          {footerLinks.resources.map((link) => (
            <li>
              <a href={link.href} class="text-gray-600 dark:text-slate-400 hover:text-brand-magenta dark:hover:text-brand-pink text-sm transition-colors">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Legal -->
      <div>
        <h3 class="font-semibold text-gray-900 dark:text-white mb-4">Legal</h3>
        <ul class="space-y-3">
          {footerLinks.legal.map((link) => (
            <li>
              <a href={link.href} class="text-gray-600 dark:text-slate-400 hover:text-brand-magenta dark:hover:text-brand-pink text-sm transition-colors">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="mt-12 pt-8 border-t border-gray-200 dark:border-slate-700">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="text-gray-500 dark:text-slate-400 text-sm">
          &copy; {currentYear} sIQurity LLC. All rights reserved.
        </p>
        <p class="text-gray-500 dark:text-slate-400 text-sm">
          Proudly supporting the <a href="https://siqurity.org" class="text-brand-magenta dark:text-brand-pink hover:underline" target="_blank" rel="noopener noreferrer">sIQurity Foundation</a>
        </p>
      </div>
    </div>
  </div>
</footer>
