---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const plans = [
  {
    name: 'Starter',
    description: 'For small contractors beginning their compliance journey',
    price: '499',
    period: 'month',
    features: [
      'Up to 5 users',
      'NIST 800-171 assessments',
      'SPRS score calculation',
      'Basic evidence management',
      'Document templates',
      'Email support',
    ],
    cta: 'Get Started',
    popular: false,
  },
  {
    name: 'Professional',
    description: 'For growing contractors pursuing CMMC certification',
    price: '999',
    period: 'month',
    features: [
      'Up to 15 users',
      'CMMC Level 1 & 2 assessments',
      'Full evidence management',
      'SSP & POA&M generation',
      'Real-time dashboards',
      'Priority email support',
      'Quarterly compliance reviews',
    ],
    cta: 'Get Started',
    popular: true,
  },
  {
    name: 'Enterprise',
    description: 'For large contractors with complex requirements',
    price: 'Custom',
    period: '',
    features: [
      'Unlimited users',
      'All CMMC levels',
      'Automated scanning',
      'Custom integrations',
      'Dedicated success manager',
      'On-site training available',
      '24/7 phone support',
      'SLA guarantees',
    ],
    cta: 'Contact Sales',
    popular: false,
  },
];

const faqs = [
  {
    question: 'Can I switch plans later?',
    answer: 'Yes, you can upgrade or downgrade your plan at any time. Changes take effect at the start of your next billing cycle.',
  },
  {
    question: 'Is there a free trial?',
    answer: 'We offer a 14-day free trial of our Professional plan. No credit card required to start.',
  },
  {
    question: 'What payment methods do you accept?',
    answer: 'We accept all major credit cards, ACH transfers, and can accommodate purchase orders for Enterprise customers.',
  },
  {
    question: 'Do you offer annual billing?',
    answer: 'Yes, annual billing is available with a 15% discount compared to monthly billing.',
  },
  {
    question: 'Is my data secure?',
    answer: 'Absolutely. We use AES-256 encryption, are hosted in FedRAMP-authorized cloud infrastructure, and undergo regular third-party security audits.',
  },
  {
    question: 'Can you help with our CMMC assessment?',
    answer: 'While we provide the tools and guidance, we partner with C3PAOs who can conduct your official assessment. Contact us for referrals.',
  },
];
---

<Layout title="Pricing - sIQurity">
  <Header slot="header" />

  <!-- Hero -->
  <section class="relative overflow-hidden bg-gradient-to-br from-slate-50 via-white to-purple-50 dark:from-slate-900 dark:via-slate-900 dark:to-slate-800 py-20 lg:py-28">
    <div class="container-custom text-center">
      <h1 class="text-4xl lg:text-5xl font-bold text-gray-900 dark:text-white mb-6">
        Simple, Transparent
        <span class="text-brand-gradient">Pricing</span>
      </h1>
      <p class="text-xl text-gray-600 dark:text-slate-300 max-w-2xl mx-auto">
        Choose the plan that fits your organization. All plans include a 14-day free trial.
      </p>
    </div>
  </section>

  <!-- Pricing Cards -->
  <section class="section -mt-10">
    <div class="container-custom">
      <div class="grid md:grid-cols-3 gap-8 max-w-6xl mx-auto">
        {plans.map((plan) => (
          <div class={`card p-8 relative ${plan.popular ? 'ring-2 ring-brand-magenta dark:ring-brand-pink' : ''}`}>
            {plan.popular && (
              <div class="absolute -top-4 left-1/2 -translate-x-1/2 px-4 py-1 bg-brand-gradient rounded-full text-white text-sm font-medium">
                Most Popular
              </div>
            )}
            <div class="text-center mb-8">
              <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">
                {plan.name}
              </h3>
              <p class="text-gray-600 dark:text-slate-400 text-sm mb-4">
                {plan.description}
              </p>
              <div class="flex items-baseline justify-center gap-1">
                {plan.price === 'Custom' ? (
                  <span class="text-4xl font-bold text-gray-900 dark:text-white">Custom</span>
                ) : (
                  <>
                    <span class="text-2xl text-gray-600 dark:text-slate-400">$</span>
                    <span class="text-5xl font-bold text-gray-900 dark:text-white">{plan.price}</span>
                    <span class="text-gray-600 dark:text-slate-400">/{plan.period}</span>
                  </>
                )}
              </div>
            </div>
            <ul class="space-y-4 mb-8">
              {plan.features.map((feature) => (
                <li class="flex items-start gap-3">
                  <svg class="w-5 h-5 text-green-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <span class="text-gray-700 dark:text-slate-300 text-sm">{feature}</span>
                </li>
              ))}
            </ul>
            <a
              href="/contact"
              class={`block w-full text-center py-3 rounded-lg font-semibold transition-colors ${
                plan.popular
                  ? 'btn-primary'
                  : 'bg-gray-100 dark:bg-slate-700 text-gray-900 dark:text-white hover:bg-gray-200 dark:hover:bg-slate-600'
              }`}
            >
              {plan.cta}
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- FAQs -->
  <section class="section bg-gray-50 dark:bg-slate-800/50">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 dark:text-white mb-4">
          Frequently Asked Questions
        </h2>
      </div>
      <div class="max-w-3xl mx-auto space-y-6">
        {faqs.map((faq) => (
          <div class="card p-6">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">
              {faq.question}
            </h3>
            <p class="text-gray-600 dark:text-slate-400">
              {faq.answer}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="section">
    <div class="container-custom text-center">
      <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 dark:text-white mb-6">
        Still Have Questions?
      </h2>
      <p class="text-xl text-gray-600 dark:text-slate-300 mb-10 max-w-2xl mx-auto">
        Our team is here to help you find the right plan for your organization.
      </p>
      <a href="/contact" class="btn-primary text-lg px-8 py-4">
        Contact Sales
      </a>
    </div>
  </section>

  <Footer slot="footer" />
</Layout>
