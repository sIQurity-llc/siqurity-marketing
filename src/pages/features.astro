---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const mainFeatures = [
  {
    title: 'CMMC 2.0 Compliance Management',
    description: 'Full support for all three CMMC 2.0 levels. Our platform maps your existing controls, identifies gaps, and guides you through remediation.',
    features: [
      'Level 1, 2, and 3 assessment templates',
      'Gap analysis with prioritized remediation',
      'C3PAO assessment preparation',
      'Continuous compliance monitoring',
    ],
    icon: 'üõ°Ô∏è',
  },
  {
    title: 'NIST 800-171 Assessment Engine',
    description: 'Comprehensive assessments aligned with all 110 NIST SP 800-171 Rev 2 controls. Calculate your SPRS score automatically.',
    features: [
      'All 110 security requirements covered',
      'Automated SPRS score calculation',
      'Control implementation guidance',
      'Assessment history tracking',
    ],
    icon: 'üìã',
  },
  {
    title: 'Evidence Management',
    description: 'Centralized repository for all your compliance artifacts. Link evidence directly to controls and never scramble during an audit again.',
    features: [
      'Drag-and-drop file uploads',
      'Evidence-to-control mapping',
      'Version history and audit trails',
      'Secure cloud storage',
    ],
    icon: 'üìÅ',
  },
  {
    title: 'Document Generation',
    description: 'Auto-generate required compliance documentation based on your assessments. Keep your paperwork up-to-date effortlessly.',
    features: [
      'System Security Plans (SSP)',
      'Plan of Action & Milestones (POA&M)',
      'Policies and procedures templates',
      'Custom document templates',
    ],
    icon: 'üìÑ',
  },
  {
    title: 'Real-time Analytics & Reporting',
    description: 'Visual dashboards provide instant insight into your compliance posture. Track progress and identify risks at a glance.',
    features: [
      'Compliance score dashboards',
      'Risk heat maps',
      'Progress tracking over time',
      'Executive summary reports',
    ],
    icon: 'üìä',
  },
  {
    title: 'Automated Scanning',
    description: 'Continuous monitoring of your environment against compliance requirements. Get alerted to issues before they become findings.',
    features: [
      'Network vulnerability scanning',
      'Configuration compliance checks',
      'Automated evidence collection',
      'Integration with security tools',
    ],
    icon: 'üîç',
  },
];

const frameworks = [
  { name: 'CMMC 2.0', description: 'All three levels' },
  { name: 'NIST 800-171', description: 'Rev 2 controls' },
  { name: 'NIST CSF', description: 'Cybersecurity Framework' },
  { name: 'DFARS 252.204-7012', description: 'Safeguarding requirements' },
  { name: 'FedRAMP', description: 'Coming soon' },
  { name: 'ISO 27001', description: 'Coming soon' },
];
---

<Layout title="Features - sIQurity">
  <Header slot="header" />

  <!-- Hero -->
  <section class="relative overflow-hidden bg-gradient-to-br from-slate-50 via-white to-purple-50 dark:from-slate-900 dark:via-slate-900 dark:to-slate-800 py-20 lg:py-28">
    <div class="container-custom">
      <div class="max-w-3xl">
        <h1 class="text-4xl lg:text-5xl font-bold text-gray-900 dark:text-white mb-6">
          Powerful Features for
          <span class="text-brand-gradient">Complete Compliance</span>
        </h1>
        <p class="text-xl text-gray-600 dark:text-slate-300">
          Everything you need to achieve and maintain compliance with CMMC, NIST 800-171, and other federal requirements.
        </p>
      </div>
    </div>
  </section>

  <!-- Features Grid -->
  <section class="section">
    <div class="container-custom">
      <div class="space-y-20">
        {mainFeatures.map((feature, index) => (
          <div class={`grid lg:grid-cols-2 gap-12 items-center ${index % 2 === 1 ? 'lg:flex-row-reverse' : ''}`}>
            <div class={index % 2 === 1 ? 'lg:order-2' : ''}>
              <div class="text-5xl mb-6">{feature.icon}</div>
              <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">
                {feature.title}
              </h2>
              <p class="text-lg text-gray-600 dark:text-slate-300 mb-6">
                {feature.description}
              </p>
              <ul class="space-y-3">
                {feature.features.map((item) => (
                  <li class="flex items-start gap-3">
                    <svg class="w-6 h-6 text-green-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    <span class="text-gray-700 dark:text-slate-300">{item}</span>
                  </li>
                ))}
              </ul>
            </div>
            <div class={`card p-8 bg-gradient-to-br from-purple-50 to-blue-50 dark:from-slate-800 dark:to-slate-700 ${index % 2 === 1 ? 'lg:order-1' : ''}`}>
              <div class="aspect-video bg-white dark:bg-slate-900 rounded-lg shadow-inner flex items-center justify-center">
                <span class="text-8xl">{feature.icon}</span>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Frameworks Supported -->
  <section class="section bg-gray-50 dark:bg-slate-800/50">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 dark:text-white mb-4">
          Frameworks Supported
        </h2>
        <p class="text-xl text-gray-600 dark:text-slate-300 max-w-2xl mx-auto">
          sIQurity supports the compliance frameworks that matter most to defense contractors.
        </p>
      </div>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {frameworks.map((framework) => (
          <div class="card p-6 text-center">
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">
              {framework.name}
            </h3>
            <p class="text-gray-600 dark:text-slate-400">
              {framework.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="section bg-brand-gradient">
    <div class="container-custom text-center">
      <h2 class="text-3xl lg:text-4xl font-bold text-white mb-6">
        Ready to See These Features in Action?
      </h2>
      <p class="text-xl text-white/90 mb-10 max-w-2xl mx-auto">
        Schedule a personalized demo and see how sIQurity can transform your compliance program.
      </p>
      <a href="/contact" class="inline-flex items-center justify-center px-8 py-4 rounded-lg font-semibold bg-white text-brand-magenta hover:bg-gray-100 transition-colors">
        Schedule a Demo
      </a>
    </div>
  </section>

  <Footer slot="footer" />
</Layout>
