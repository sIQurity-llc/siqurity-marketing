---
const currentYear = new Date().getFullYear();

const footerLinks = {
  product: [
    { name: 'Features', href: '/features' },
    { name: 'Pricing', href: '/pricing' },
    { name: 'Security', href: '/security' },
    { name: 'Roadmap', href: '/roadmap' },
  ],
  company: [
    { name: 'About', href: '/about' },
    { name: 'Blog', href: '/blog' },
    { name: 'Careers', href: '/careers' },
    { name: 'Contact', href: '/contact' },
  ],
  resources: [
    { name: 'Documentation', href: '/docs' },
    { name: 'CMMC Guide', href: '/cmmc-guide' },
    { name: 'NIST 800-171', href: '/nist-800-171' },
    { name: 'Support', href: '/support' },
  ],
  legal: [
    { name: 'Privacy Policy', href: '/privacy' },
    { name: 'Terms of Service', href: '/terms' },
    { name: 'Cookie Policy', href: '/cookies' },
  ],
};
---

<footer class="bg-gray-50 dark:bg-slate-800 border-t border-gray-200 dark:border-slate-700">
  <div class="container-custom py-12 lg:py-16">
    <div class="grid grid-cols-2 md:grid-cols-5 gap-8 lg:gap-12">
      <!-- Brand -->
      <div class="col-span-2 md:col-span-1">
        <a href="/" class="flex items-center gap-2 mb-4">
          <img src="/siqurity-logo-only-color.png" alt="sIQurity" class="h-8 w-8" />
          <span class="text-xl font-bold text-brand-gradient font-orbitron">sIQurity</span>
        </a>
        <p class="text-gray-600 dark:text-slate-400 text-sm mb-4">
          Intelligent compliance management for defense contractors.
        </p>
        <div class="flex gap-4">
          <a href="https://linkedin.com/company/siqurity" class="text-gray-400 hover:text-brand-magenta dark:hover:text-brand-pink transition-colors" aria-label="LinkedIn">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
          <a href="https://twitter.com/siqurity" class="text-gray-400 hover:text-brand-magenta dark:hover:text-brand-pink transition-colors" aria-label="Twitter">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Product -->
      <div>
        <h3 class="font-semibold text-gray-900 dark:text-white mb-4">Product</h3>
        <ul class="space-y-3">
          {footerLinks.product.map((link) => (
            <li>
              <a href={link.href} class="text-gray-600 dark:text-slate-400 hover:text-brand-magenta dark:hover:text-brand-pink text-sm transition-colors">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Company -->
      <div>
        <h3 class="font-semibold text-gray-900 dark:text-white mb-4">Company</h3>
        <ul class="space-y-3">
          {footerLinks.company.map((link) => (
            <li>
              <a href={link.href} class="text-gray-600 dark:text-slate-400 hover:text-brand-magenta dark:hover:text-brand-pink text-sm transition-colors">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Resources -->
      <div>
        <h3 class="font-semibold text-gray-900 dark:text-white mb-4">Resources</h3>
        <ul class="space-y-3">
          {footerLinks.resources.map((link) => (
            <li>
              <a href={link.href} class="text-gray-600 dark:text-slate-400 hover:text-brand-magenta dark:hover:text-brand-pink text-sm transition-colors">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Legal -->
      <div>
        <h3 class="font-semibold text-gray-900 dark:text-white mb-4">Legal</h3>
        <ul class="space-y-3">
          {footerLinks.legal.map((link) => (
            <li>
              <a href={link.href} class="text-gray-600 dark:text-slate-400 hover:text-brand-magenta dark:hover:text-brand-pink text-sm transition-colors">
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="mt-12 pt-8 border-t border-gray-200 dark:border-slate-700">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="text-gray-500 dark:text-slate-400 text-sm">
          &copy; {currentYear} sIQurity LLC. All rights reserved.
        </p>
        <p class="text-gray-500 dark:text-slate-400 text-sm">
          A product of the <a href="https://siqurity.org" class="text-brand-magenta dark:text-brand-pink hover:underline">sIQurity Foundation</a>
        </p>
      </div>
    </div>
  </div>
</footer>
